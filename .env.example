# WineBusiness.news - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# DATABASE (PostgreSQL)
# ===========================================
POSTGRES_DB=winebusiness
POSTGRES_USER=winebusiness
POSTGRES_PASSWORD=your_secure_password_here

# ===========================================
# STRAPI CMS
# ===========================================
# Generate these with: openssl rand -base64 32
STRAPI_APP_KEYS=key1,key2,key3,key4
STRAPI_API_TOKEN_SALT=your_api_token_salt
STRAPI_ADMIN_JWT_SECRET=your_admin_jwt_secret
STRAPI_TRANSFER_TOKEN_SALT=your_transfer_token_salt
STRAPI_JWT_SECRET=your_jwt_secret

# API Token for frontend to access Strapi
STRAPI_API_TOKEN=your_strapi_api_token

# Database SSL (set to true for cloud databases)
DATABASE_SSL=false

# ===========================================
# FRONTEND (Next.js)
# ===========================================
# Public URL of the Strapi API (as seen by the browser)
NEXT_PUBLIC_STRAPI_URL=https://winebusiness.news

# Public URL of the site
NEXT_PUBLIC_SITE_URL=https://winebusiness.news

# Google Analytics ID
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Google Ad Manager Network Code
NEXT_PUBLIC_GAM_NETWORK_CODE=12345678

# ===========================================
# NEWSLETTER
# ===========================================
# Webhook URL for newsletter integrations (Mailchimp, Brevo, etc.)
NEWSLETTER_WEBHOOK_URL=https://your-webhook-url.com

# ===========================================
# OPTIONAL: EXTERNAL SERVICES
# ===========================================
# AWS S3 for media storage (optional)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=
# AWS_BUCKET=

# SMTP for transactional emails (optional)
# SMTP_HOST=
# SMTP_PORT=
# SMTP_USER=
# SMTP_PASSWORD=
# SMTP_FROM=noreply@winebusiness.news
